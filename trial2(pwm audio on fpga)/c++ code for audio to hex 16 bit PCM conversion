#include <fstream>
#include <iostream>
#include <string>

using namespace std;

int main() {
    // Open input file in binary mode
    ifstream input("audioToCoeWAVFILE.wav", ios::binary);
    
    // Open output file in text mode
    ofstream output("GPThope.txt");
    
    // Read WAV data by chunks of 2 bytes (16-bit)
    char buffer[2];
    while (input.read(buffer, 2)) {
        // Convert the 2 bytes to a single 16-bit integer
        short sample = (buffer[1] << 8) | buffer[0];
        
        // Write the hexadecimal representation of the sample to the output file
        output << hex << sample;
    }
    
    // Close the input and output files
    input.close();
    output.close();
    
    return 0;
}
